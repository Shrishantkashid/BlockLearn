{
  "version": 2,
  "public": false,
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "api/[[...all]].js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/**",
          "api/**"
        ]
      }
    },
    {
      "src": "api/health.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[[...all]].js"
    },
    {
      "src": "/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}